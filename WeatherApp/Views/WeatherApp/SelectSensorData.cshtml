@model WeatherApp.Models.SelectDataModel
@{
}
<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Search by city</title>
</head>

<body>
    <div class="container">

        <form method="post">
            <h5>Select location</h5>
            <div class="dropdown">
                <select class="form-select form-select-md mb-3" aria-label=".form-select-lg example" asp-for="Location" required>
                    <option selected="true" disabled="disabled"></option>
                    <option value="Leżajsk">Leżajsk</option>
                </select>
            </div>

            <h5>Input number of samples</h5>
            <div>
                <input type="number" required asp-for="Results" min="1" step="1" class="form-control mb-3" />
                <button asp-controller="WeatherApp" asp-action="SelectingSensorData" class="btn btn-outline-primary mb-3">
                    Select
                </button>
            </div>
        </form>
    </div>
</body>
</html>